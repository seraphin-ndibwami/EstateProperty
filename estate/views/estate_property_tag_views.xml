<odoo>
    <record id="estate_property_tags_search_view" model="ir.ui.view">
        <field name="name">estate_property_tags.view.search</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <search string="Search  type">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="estate_property_tags_tree_view" model="ir.ui.view">
        <field name="name">estate_property_tags.view.tree</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Title"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_tags_form_view" model="ir.ui.view">
        <field name="name">estate_property_tags.view.form</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <field class="text-break" name="name" options="{'line_breaks': False}" widget="text"
                                   placeholder="e.g. tag1 "/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_tag_action_tags" model="ir.actions.act_window">
        <field name="name">Properties tags</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>